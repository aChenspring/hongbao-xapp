view {
  box-sizing: border-box;
}
page {
  background-color: #fff6d0;
  font-family: "Helvetica Neue", Arial, "微软雅黑", "Hiragino Sans GB", sans-serif;
}
.loading {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  background-color: white;
  display: flex;
  justify-content: center;
  align-items: center;
}
.loading image {
  width: 20px;
  height: 20px;
}
.ellipsis {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.s1 {
  padding: 35px;
}
.s1 .one image {
  width: 45%;
  border-radius: 100%;
  display: block;
  margin: auto;
}
.s1 .two {
  margin-top: -20px;
  width: 66%;
  margin-left: 17%;
  position: relative;
}
.s1 .two image {
  display: block;
  width: 100%;
  border: 0.5px solid red;
}
.s1 .two text {
  position: absolute;
  width: 100%;
  height: 100%;
  text-align: center;
  border: 0.5px solid red;
  color: white;
  top: 0;
  line-height: 30px;
}
.s2 {
  background-color: white;
}
.s2 .row {
  padding: 20px;
  display: flex;
  border-bottom: 1px solid #DEE3E6;
}
.s2 .row:first-child {
  border-top: 1px solid #DEE3E6;
}
.s2 .row .left image {
  width: 30px;
  height: 30px;
  display: block;
}
.s2 .row .center {
  width: 90%;
  padding: 0 20px;
  line-height: 30px;
  color: #405467;
  font-size: 15px;
}
.s2 .row .right image {
  width: 30px;
  height: 30px;
  display: block;
}
